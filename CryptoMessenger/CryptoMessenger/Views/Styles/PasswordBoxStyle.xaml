<ResourceDictionary 
    x:Class="CryptoMessenger.Views.Styles.PasswordBoxStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CryptoMessenger.Views.Styles"
    xmlns:props="clr-namespace:CryptoMessenger.Properties"
    xmlns:extensions="clr-namespace:CryptoMessenger.Views.Extensions"
    >

    <Style x:Key="PasswordBoxStyle" TargetType="{x:Type PasswordBox}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BorderBrush" Value="{Binding Path=TextBoxBorderBrush, Source={x:Static props:Settings.Default}}"/>
        <Setter Property="SelectionBrush" Value="{Binding Path=SelectionBrush, Source={x:Static props:Settings.Default}}"/>
        <Setter Property="SelectionOpacity" Value="0.5"/>
        <Setter Property="extensions:Extensions.IsMonitoring" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Grid>
                        <Border
                            x:Name="passwordBoxBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            Padding="0"
                            ClipToBounds="True"
                            >
                            <!-- border for notifications (error, success) -->
                            <Border x:Name="secondBorder" 
                                    Background="Transparent" BorderBrush="Black" 
                                    BorderThickness="10" Margin="-12"
                                    />
                        </Border>

                        <Grid Margin="5">
                            <!-- text -->
                            <ScrollViewer 
                                x:Name="PART_ContentHost"
                                BorderThickness="0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Background="Transparent" 
                                Panel.ZIndex="2"
                                TextOptions.TextRenderingMode="ClearType"
                                TextOptions.TextFormattingMode="Display"
                                />
                            <!-- placeholder -->
                            <TextBox 
                                x:Name="placeholder"
                                Text="{TemplateBinding Tag}" 
                                Background="Transparent" 
                                Panel.ZIndex="1"
                                BorderThickness="0"
                                TextOptions.TextRenderingMode="ClearType"
                                TextOptions.TextFormattingMode="Display"
                                IsTabStop="False"
                                Foreground="Transparent"
                                />
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- placeholder -->
                        <Trigger Property="extensions:Extensions.PasswordLength" Value="0">
                            <Setter TargetName="placeholder" Property="Foreground" Value="LightGray"/>
                        </Trigger>
                        <!-- passwordbox got focus -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="passwordBoxBorder" 
                                    Property="BorderBrush" 
                                    Value="{Binding Path=FocusedTextBoxBorderBrush, Source={x:Static props:Settings.Default}}"
                                    />
                        </Trigger>
                        <!-- passwordbox disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="passwordBoxBorder" Property="Background" Value="LightGray"/>
                        </Trigger>
                        <!-- is data incorrect -->
                        <Trigger Property="extensions:Extensions.IsDataIncorrect" Value="True">
                            <Setter TargetName="secondBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" 
                                                      Color="{Binding Path=AlertColor, Source={x:Static props:Settings.Default}}"
                                                      />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <!-- is data correct -->
                        <Trigger Property="extensions:Extensions.IsDataCorrect" Value="True">
                            <Setter TargetName="secondBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" 
                                                      Color="{Binding Path=SuccessColor, Source={x:Static props:Settings.Default}}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
    